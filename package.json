{
  "name": "devsecops-filrouge",
  "version": "1.0.0",
  "description": "API volontairement vuln√©rable pour l'apprentissage DevSecOps",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon -r ./src/tracing.js src/server.js",
    "start": "node -r ./src/tracing.js src/server.js",
    "init-db": "node scripts/init-db.js",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "sonar:up": "docker-compose -f docker-compose-sq.yml up -d",
    "sonar:down": "docker-compose -f docker-compose-sq.yml down",
    "sonar:logs": "docker-compose -f docker-compose-sq.yml logs -f sonarqube",
    "sonar:scan": "docker run --rm -v \"${PWD}:/usr/src\" -w /usr/src sonarsource/sonar-scanner-cli:latest -Dsonar.host.url=http://host.docker.internal:9000 -Dsonar.login=${SONAR_LOGIN:-admin} -Dsonar.password=${SONAR_PASSWORD:-admin}",
    "sonar:scan:local": "sonar-scanner -Dsonar.host.url=http://localhost:9000 -Dsonar.login=${SONAR_LOGIN:-admin} -Dsonar.password=${SONAR_PASSWORD:-admin}",
    "prepare": "husky"
  },
  "keywords": [
    "devsecops",
    "security",
    "owasp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.52.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.0",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-node": "^0.57.0",
    "@opentelemetry/semantic-conventions": "^1.30.1",
    "bcrypt": "^6.0.0",
    "cors": "2.8.5",
    "dotenv": "10.0.0",
    "express": "^4.22.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "8.7.1",
    "prom-client": "^15.1.3",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.39.2",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2",
    "vitest": "^4.0.17"
  }
}
